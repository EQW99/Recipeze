<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.explore.ExploreFragment">

    <SearchView
        android:id="@+id/search"
        android:layout_width="367dp"
        android:layout_height="35dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/bg_search_rounded"
        android:clickable="true"
        android:gravity="top"
        android:iconifiedByDefault="false"
        android:paddingStart="0dp"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search for recipes, ingredients..."
        android:searchHintIcon="@drawable/ic_surface1"
        android:searchIcon="@drawable/ic_surface1"
        android:theme="@style/AppSearchView"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_trendingtags"
        android:layout_width="178dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/trending_tags"
        android:textColor="@color/dark_text"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />

    <TextView
        android:id="@+id/viewalltagsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/view_all"
        android:textColor="@color/green"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toEndOf="@+id/text_trendingtags"
        app:layout_constraintTop_toTopOf="@+id/text_trendingtags" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/veganBtn"
        style="@style/buttons"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/green"
        android:text="@string/vegan"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_trendingtags" />

    <TextView
        android:id="@+id/veganRecipeNoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppinsregular"
        android:text="600+ recipes"
        android:textColor="@color/light_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/veganBtn" />

    <TextView
        android:id="@+id/glutenfreeRecipeNoTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppinsregular"
        android:text="800+ recipes"
        android:textColor="@color/light_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/glutenfreeBtn" />

    <TextView
        android:id="@+id/vegetarianRecipeNoTxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppinsregular"
        android:text="1k+ recipes"
        android:textColor="@color/light_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vegetarianBTN" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vegetarianBTN"
        style="@style/buttons"
        android:layout_width="105dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:text="Vegetarian"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veganBtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/glutenfreeBtn"
        style="@style/buttons"
        android:layout_width="105dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:text="Gluten Free"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vegetarianBTN" />

    <TextView
        android:id="@+id/trendingRecipesTxt"
        android:layout_width="220dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/trending_recipes"
        android:textColor="#494949"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />

    <TextView
        android:id="@+id/viewallRecipesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/view_all"
        android:textColor="@color/green"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toEndOf="@+id/text_trendingtags"
        app:layout_constraintTop_toTopOf="@+id/trendingRecipesTxt" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exploreRecipes"
        android:layout_width="0dp"
        android:layout_height="246dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trendingRecipesTxt"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
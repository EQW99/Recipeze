<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/transparent"
    tools:context=".ui.search.FilterFragment"
    android:layout_marginTop="20dp">

    <Button
        android:id="@+id/topBar"
        android:layout_width="46dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="804dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:text="Time"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Min - (Minuets)"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <SeekBar
                    android:id="@+id/TimeMinSeek"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:max="120"
                    android:progress="2"
                    android:scrollbarSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/minTimeShow"
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    android:text="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TimeMinSeek" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:text="Max - (Minuets)"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TimeMinSeek" />

                <SeekBar
                    android:id="@+id/TimeMaxSeek"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:max="120"
                    android:progress="2"
                    android:scrollbarSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <TextView
                    android:id="@+id/maxTimeShow"
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    android:text="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TimeMaxSeek" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:text="Difficulty"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TimeMaxSeek" />

                <SeekBar
                    android:id="@+id/DifficultySeek"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:max="4"
                    android:progress="3"
                    android:scrollbarSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/difficultyShow"
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    android:text="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/DifficultySeek" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:text="Number of ingredients"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/DifficultySeek" />

                <SeekBar
                    android:id="@+id/NumOfIndSeek"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:max="20"
                    android:progress="3"
                    android:scrollbarSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" />

                <TextView
                    android:id="@+id/ingNumShow"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:text="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/NumOfIndSeek" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:text="Diet"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/NumOfIndSeek" />

                <Spinner
                    android:id="@+id/DietSpinner"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:entries="@array/filterOptions"
                    android:spinnerMode="dropdown"
                    android:text="@string/filterSpin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="123dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:text="Food Choices"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/DietSpinner" />

                <TableLayout
                    android:id="@+id/tableLayout2"
                    android:layout_width="367dp"
                    android:layout_height="134dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView10">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/GlutenFree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gluten Free" />

                        <CheckBox
                            android:id="@+id/NutCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Nuts" />

                        <CheckBox
                            android:id="@+id/DairyFree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dairy Free" />

                        <CheckBox
                            android:id="@+id/NoFish"
                            android:layout_width="81dp"
                            android:layout_height="43dp"
                            android:text="No fish" />
                    </TableRow>

                    <TableRow
                        android:layout_width="271dp"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:textAlignment="center">

                        <CheckBox
                            android:id="@+id/PotatoCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Potato" />

                        <CheckBox
                            android:id="@+id/pastaCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pasta" />

                        <CheckBox
                            android:id="@+id/riceCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rice" />

                        <CheckBox
                            android:id="@+id/carrotCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="carrot" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/PepperCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pepper" />

                        <CheckBox
                            android:id="@+id/OnionCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Onion" />

                        <CheckBox
                            android:id="@+id/TomatoCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tomato" />

                        <CheckBox
                            android:id="@+id/EggCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Egg" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </TableLayout>

                <Button
                    android:id="@+id/FiltersChosenBut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="157dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="161dp"
                    android:text="Filter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="FILTERS"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topBar" />

</androidx.constraintlayout.widget.ConstraintLayout>